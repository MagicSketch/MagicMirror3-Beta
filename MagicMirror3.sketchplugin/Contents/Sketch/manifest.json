{
	"name": "MagicMirror3c",
	"description" : "Image Perspective Transformation Plugin for Sketch",
	"author": "James Tang",
	"authorEmail" : "james@magicsketch.io",
	"homepage": "https://github.com/MagicSketch/MagicMirror",
	"identifier" : "MM3PluginIdentifier",
	"compatibleVersion": "MM3SketchVersion",
	"build": MM3PluginCode,
	"version": "MM3PluginVersion",
    "appcast": "https://api.magicsketch.io/r/appcast.xml",

	"commands": [
		{
			"name" : "Run",
			"identifier" : "run",
			"shortcut" : "",
			"script" : "script.cocoscript",
			"handler" : "onRun"
		},
        {
            "name" : "Enable MagicMirror",
            "identifier" : "enable",
            "shortcut" : "",
            "script" : "MagicMirror3Panel.framework/MagicMirror3Panel.js",
            "handler" : "enable"
        },
        {
            "name" : "Disable MagicMirror",
            "identifier" : "disable",
            "shortcut" : "",
            "script" : "MagicMirror3Panel.framework/MagicMirror3Panel.js",
            "handler" : "disable"
        },

		{
			"script" : "script.cocoscript",
			"handlers" : {
				"actions" : {
					"Startup" : "onStartup",
					"OpenDocument":"onOpenDocument",
					"SelectionChanged.finish" : "onSelectionChanged"
				}
			}
		},
		{
	    "script" : "MagicMirror3Panel.framework/MagicMirror3Panel.js",
	    "handlers" : {
        "actions" : {
            "Startup" : "onStartup",
            "OpenDocument":"onOpenDocument",
            "SelectionChanged.finish" : "onSelectionChanged"
        }
	    }
		}
	],
	"menu": {
		"isRoot" : false,
		"shortcut" : "",
		"title": "Magic Mirror 3c",
		"items": [
			"enable",
            "disable"
		]
	}
}
